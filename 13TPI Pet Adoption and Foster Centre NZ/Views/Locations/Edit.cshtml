@model _13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Location

@{
    ViewData["Title"] = "Edit Location";
}

<div class="container" style="max-width:820px;margin-top:1.25rem;">
    <h3 class="mb-3">Edit Location</h3>

    @await Html.PartialAsync("_Alerts")

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="LocationID" />
                @await Html.PartialAsync("_LocationForm", Model)
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
