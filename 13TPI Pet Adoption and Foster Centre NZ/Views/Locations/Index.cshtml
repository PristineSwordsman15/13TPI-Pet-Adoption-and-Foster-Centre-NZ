@model _13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.PaginatedList<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Location>

@{
    ViewData["Title"] = "Locations";
    var currentSort = ViewData["CurrentSort"] as string;
    var nameSortParm = ViewData["NameSortParm"] as string;
    var citySortParm = ViewData["CitySortParm"] as string;
    var currentFilter = ViewData["CurrentFilter"] as string;
    var currentPage = Model.PageIndex;
    var totalPages = Model.TotalPages;
}

<h1>Locations</h1>

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchString" value="@currentFilter" placeholder="Search locations..." class="form-control d-inline-block w-auto" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-circle"></i> Add New Location</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@nameSortParm" asp-route-searchString="@currentFilter" asp-route-page="1">Location Name</a></th>
            <th>Street</th>
            <th><a asp-action="Index" asp-route-sortOrder="@citySortParm" asp-route-searchString="@currentFilter" asp-route-page="1">City</a></th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LocationName</td>
                <td>@item.Street</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.ZipCode</td>
                <td>@item.Country</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LocationID" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@item.LocationID" class="btn btn-sm btn-info"><i class="bi bi-eye"></i> Details</a>
                    <a asp-action="Delete" asp-route-id="@item.LocationID" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-sortOrder="@currentSort"
                   asp-route-searchString="@currentFilter">@i</a>
            </li>
        }
    </ul>
</nav>
