@model X.PagedList.IPagedList<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.AdminOffice>
@using X.PagedList.Mvc.Core


@{
    ViewData["Title"] = "Admin Offices";
}

<h1>Admin Offices</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control mr-2" placeholder="Search..." />
    <input type="submit" value="Search" class="btn btn-outline-primary" />
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" asp-route-searchString="@ViewBag.CurrentFilter">Last Name</a>
            </th>
            <th>First Name</th>
            <th>Email</th>
            <th>Contact No</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParm" asp-route-searchString="@ViewBag.CurrentFilter">Date Hired</a>
            </th>
            <th>Access Level</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.EmailAddress</td>
                <td>@item.ContactNo</td>
                <td>@item.DateHired.ToString("dd/MM/yyyy")</td>
                <td>@item.AccessLevel?.LevelName</td>
                <td>@item.TitleName</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.AdminID">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.AdminID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.AdminID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new {
    page,
    sortOrder = ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
        }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            DisplayPageCountAndCurrentLocation = true,
            MaximumPageNumbersToDisplay = 5,
            DisplayEllipsesWhenNotShowingAllPageNumbers = true
        })
</div>
