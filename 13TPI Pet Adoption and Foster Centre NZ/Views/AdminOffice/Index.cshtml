

@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.AdminOffice>

@{
    ViewData["Title"] = "Admin Office - Index";
}

<h1 class="mb-3">Admin Office</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.UserID)</th>
            <th>@Html.DisplayNameFor(Model=>Model.AdminID)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
            <th>@Html.DisplayNameFor(model => model.ContactNo)</th>
            <th>@Html.DisplayNameFor(model => model.DateHired)</th>
            <th>@Html.DisplayNameFor(model => model.AccessLevel)</th>
            <th>@Html.DisplayNameFor(model => model.TitleName)</th>
            <th>@Html.DisplayNameFor(model => model.ImageName)</th>
            <th>Actions
                <
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                <td>@Html.DisplayFor(modelItem=> item.AdminID)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactNo)</td>
                <td>@item.DateHired.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.LevelName)</td>
                <td>@Html.DisplayFor(modelItem => item.TitleName)</td>
                <td>@Html.DisplayFor(modelItem => item.ImageName)</td>
                <td>Actions
                    <a asp-action="Edit" asp-route-id="@item.AdminID" class="btn btn-sm btn-outline-primary me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.AdminID" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AdminID" class="btn btn-sm btn-outline-danger me-1">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}