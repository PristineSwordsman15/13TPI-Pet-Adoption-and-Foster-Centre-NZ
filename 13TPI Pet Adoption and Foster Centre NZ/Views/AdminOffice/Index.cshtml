@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.AdminOffice>
@{
    ViewData["Title"] = "Admin Management";
}

<h2 class="text-primary">Admin Office Management</h2>

<form method="get" asp-action="Index" class="row g-3 mb-3">
    <div class="col-md-4">
        <input type="text" name="searchString" value="@ViewData["CurrentSearch"]"
               class="form-control" placeholder="Search by name or email" />
    </div>
    <div class="col-md-3">
        <select name="accessLevelId" class="form-select">
            <option value="">All Access Levels</option>
            @foreach (var level in (IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.AccessLevel>)ViewData["AccessLevels"] ?? Enumerable.Empty<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.AccessLevel>())
            {
                <option value="@level.AccessLevelID" selected="@(level.AccessLevelID.ToString() == (ViewData["AccessLevelFilter"]?.ToString()))">@level.LevelName</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
    <div class="col-md-3 text-end">
        <a asp-action="Create" class="btn btn-success">+ Add Admin</a>
    </div>
</form>

<table class="table table-striped table-bordered shadow">
    <thead class="table-info">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"] as string == "name_desc" ? "" : "name_desc")">Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"] as string == "email_desc" ? "email" : "email_desc")">Email</a>
            </th>
            <th>Contact</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"] as string == "date_desc" ? "date" : "date_desc")">Hire Date</a>
            </th>
            <th>Access Level</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.FirstName @admin.LastName</td>
                <td>@admin.EmailAddress</td>
                <td>@admin.ContactNo</td>
                <td>@admin.DateHired.ToShortDateString()</td>
                <td>@admin.AccessLevel?.LevelName</td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@admin.AdminID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@admin.AdminID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@admin.AdminID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination justify-content-center">
        @{
            int totalPages = (int)ViewData["TotalPages"];
            int currentPage = (int)ViewData["CurrentPage"];
        }
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Prev</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Next</a>
        </li>
    </ul>
</nav>
