<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 13TPI Pet Adoption and Foster Centre NZ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_13TPI_Pet_Adoption_and_Foster_Centre_NZ.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> Pet Adoption and Foster Centre NZ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Admin -->

                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                Admin 

                            </a>

                            <ul class="dropdown-menu">

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-area="Index" asp-controller="AdminOffice" asp-action="Index">Admin Only</a></li>
                                }
                                @if (User.Identity.IsAuthenticated)
                                {
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Payment" asp-action="Index">Payments</a></li>
                                }
                        </ul>
                        </li>

                        <!--Home and About Us -->
                         
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                             
                                Home ane About Us

                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Home" asp-action="Privacy">About Us</a></li>
                            </ul>
                        </li>

                        <!--Organisatiom-->

                        <li class="nav-item-dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                Organisation

                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Shelter" asp-action="Index">Organisation Shelter</a></li>
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Franchise" asp-action="Index">Organisation Franchises</a></li> 
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Location" asp-action="Index">Franchise Shelter Location  </a></li>
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Coordinator" asp-action="Index"> Franchise Coordinators</a></li>
                            </ul>
                        </li>

                        <!--Pets-->

                        <li class="nav-item-dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                Pets

                                </a>

                                <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="Pet" asp-action="Index">Adopt and Foster Pets </a></li>
                                <li><a class="dropdown-item" asp-area="Index" asp-controller="MedicalRecord" asp-action="Index">Pet Medical Records</a></li>
                        </li>
                    </ul>
                </div>
                <partial name ="_LoginPartial"/>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - 13TPI Pet Adoption and Foster Centre 
            NZ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
