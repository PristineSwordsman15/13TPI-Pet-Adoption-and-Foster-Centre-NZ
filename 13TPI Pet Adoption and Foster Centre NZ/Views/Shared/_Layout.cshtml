@* =========================================================
   LAYOUT: Shared site chrome for all pages
   - Bootstrap 5 CSS/JS
   - Top navbar with brand, search, login, Admin dropdown
   - Secondary nav row (big buttons) shown on all pages
   - Footer
   ========================================================= *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 13TPI Pet Adoption and Foster Centre NZ</title>

    @* Bootstrap CSS (local) *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    @* Site CSS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* Project-scoped static CSS generated by SDK (if present) *@
    <link rel="stylesheet" href="~/_13TPI_Pet_Adoption_and_Foster_Centre_NZ.styles.css" asp-append-version="true" />
</head>
<body>
    @* =========================================================
       HEADER / TOP NAVBAR (Bootstrap 5)
       - Brand (left)
       - Search (middle)
       - Login/Register + Admin dropdown (right)
       ========================================================= *@
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-info border-bottom shadow-sm mb-0">
            <div class="container-fluid">
                @* Brand / Logo *@
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Pet Adoption & Foster Centre NZ
                </a>

                @* Mobile toggler *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* Collapsible content *@
                <div class="collapse navbar-collapse" id="mainNavbar">
                    @* (Optional) small link set on the left; kept minimal because the big buttons are below *@
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* Keep empty or add tiny links if you want *@
                    </ul>

                    @* Search box (middle/right) *@
                    <form class="d-flex me-3" role="search">
                        <input class="form-control form-control-sm" type="search" placeholder="Search pets..." aria-label="Search" />
                        <button class="btn btn-sm btn-dark ms-1" type="submit">
                            <i class="bi bi-search"></i>
                            <span class="visually-hidden">Search</span>
                        </button>
                    </form>

                    @* Admin dropdown (only when logged in) *@
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="dropdown me-2">
                            <button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="AdminOffice" asp-action="Index">
                                        Admin Office
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Payment" asp-action="Index">
                                        Payments
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Coordinator" asp-action="Index">
                                        Franchise Coordinators
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Franchise" asp-action="Index">
                                        Organisation Franchises
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Location" asp-action="Index">
                                        Franchise Locations
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="MedicalRecord" asp-action="Index">
                                        Pet Medical Records
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }

                    @* Login / Register or User menu *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        @* =========================================================
           SECONDARY NAV ROW (big button tabs, shown on all pages)
           ========================================================= *@
        <div class="bg-light py-2 border-bottom">
            <div class="container">
                <div class="d-flex justify-content-center gap-2 flex-wrap">
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Home" asp-action="Privacy">
                        About Us
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Shelter" asp-action="Index">
                        Shelters
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Home" asp-action="Index">
                        Contact
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Pet" asp-action="Index">
                        Adopt
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Pet" asp-action="Index">
                        Foster
                    </a>
                </div>
            </div>
        </div>
    </header>

    @* =========================================================
       MAIN CONTENT
       ========================================================= *@
    <main class="container my-4">
        @RenderBody()
    </main>

    @* =========================================================
       FOOTER
       - Removed fixed-bottom to avoid overlapping content
       ========================================================= *@
    <footer class="border-top text-muted py-3 fixed-bottom">
        <div class="container d-flex flex-wrap justify-content-between small">
            <div>
                &copy; 2025 - 13TPI Pet Adoption and Foster Centre NZ
            </div>
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="link-secondary me-3">Privacy</a>
                <a asp-area="" asp-controller="Home" asp-action="Contact" class="link-secondary">Contact</a>
            </div>
        </div>
    </footer>

    @* =========================================================
       SCRIPTS
       - site.js (your code)
       - Bootstrap bundle (includes Popper for dropdowns)
       ========================================================= *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
