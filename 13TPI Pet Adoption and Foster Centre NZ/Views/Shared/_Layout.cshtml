@* =========================================================
   LAYOUT: Shared site chrome for all pages
   - Bootstrap 5 CSS/JS
   - Top navbar with brand, search, login, Admin dropdown
   - Secondary nav row (big buttons) shown on all pages
   - Footer
   ========================================================= *@
<!DOCTYPE html>
<html lang="en">
<
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pet Adoption NZ</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Your custom site.css (must come AFTER Bootstrap so overrides work) -->
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>

<body>
    @* =========================================================
       HEADER / TOP NAVBAR (Bootstrap 5)
       - Brand (left)
       - Search (middle)
       - Login/Register + Admin dropdown (right)
       ========================================================= *@
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#4FC3F7;">
            <div class="container-fluid">
                @* Brand / Logo *@
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Pet Adoption & Foster Centre NZ 
                </a>

                @* Mobile toggler *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* Collapsible content *@
                <div class="collapse navbar-collapse" id="mainNavbar">
                    @* (Optional) small link set on the left; kept minimal because the big buttons are below *@
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* Keep empty or add tiny links if you want *@
                    </ul>

                    @* Search box (middle/right) *@
                    <form class="d-flex me-3" role="search">
                        <input class="form-control form-control-sm" type="search" placeholder="Search pets..." aria-label="Search" />
                        <button class="btn btn-lg btn-dark ms-1" type="submit">
                            <i class="bi bi-search"></i>
                            <span class="visually-hidden">Search</span>
                        </button>
                    </form>

                    @* Admin dropdown (only when logged in) *@
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="dropdown me-2">
                            <button class="btn btn-outline-dark btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="AdminOffice" asp-action="Index">
                                        Admin Office
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Payment" asp-action="Index">
                                        Payments
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Coordinator" asp-action="Index">
                                        Franchise Coordinators
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Franchise" asp-action="Index">
                                        Organisation Franchises
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Location" asp-action="Index">
                                        Franchise Locations
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="MedicalRecord" asp-action="Index">
                                        Pet Medical Records
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }

                    @* Login / Register or User menu *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        @* =========================================================
           SECONDARY NAV ROW (big button tabs, shown on all pages)
           ========================================================= *@
        <div class="bg-light py-2 border-bottom">
            <div class="container">
                <div class="d-flex justify-content-center gap-2 flex-wrap">
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Home" asp-action="Privacy">
                        About Us
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Shelter" asp-action="Index">
                        Shelters
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Franchise" asp-action="Index">
                        Organisation Franchise and Shelter Contacts by Location 
                    </a>
                    <a class="btn btn-outline-info px-4 py-2" asp-area="" asp-controller="Pet" asp-action="Index">
                        Adopt and Foster
                    </a>
                    
                </div>
            </div>
        </div>
    </header>

    @* =========================================================
       MAIN CONTENT
       ========================================================= *@
    <main class="container my-4">
        @RenderBody()
    </main>

    @* ==================== FOOTER ==================== *@
    <footer class="footer-custom bg-info text-white py-4 mt-5 fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">About -->Pet Adoption NZ</h5>
                    <p>Helping pets find loving homes across New Zealand. Adopt, foster, or volunteer today.</p>
                </div>
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-action="Index" asp-controller="Home" class="footer-link">Home</a></li>
                        <li><a asp-action="Index" asp-controller="Pet" class="footer-link">Adopt a Pet</a></li>
                        <li><a asp-action="Index" asp-controller="Pet" class="footer-link">Foster</a></li> 
                        <li><a asp-action="Index" asp-controller ="Franchise" class="footer-link">Franchise Coordinators</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">Contact Us</h5>
                    <p>Email: info@petadoptionnz.org</p>
                    <p>Phone: 022 4109 315</p>
                </div>
            </div>
            <div class="text-center mt-3">
                <small>&copy; 2025 Pet Adoption NZ. All rights reserved.</small>
            </div>
        </div>
    </footer>

    @section Scripts {
        <!-- Bootstrap bundle already handles carousel -->
    }
    @* =========================================================
       SCRIPTS
       - site.js (your code)
       - Bootstrap bundle (includes Popper for dropdowns)
       ========================================================= *@
    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>


