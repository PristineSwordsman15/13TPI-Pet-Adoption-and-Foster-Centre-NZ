@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";   // using Shared Layout (Layout.cshtml)
}


@*Carousal (Image carousal with captions*@
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
         

        @*Initial Slide*@
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1554830072-52d78d0d4c18?w=700&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fHBldCUyMGFkb3B0aW9ufGVufDB8fDB8fHww"
                 class="d-block w-100" alt="Happy dog being adopted">
            <div class="carousel-caption">
                <h1>Welcome to Pet Adoption NZ</h1>
                <p>Where every pet finds a home</p>
            </div>
        </div>

        @*Second Slide *@
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1518717758536-85ae29035b6d"
                 class="d-block w-100" alt="Cat resting at shelter">
            <div class="carousel-caption">
                <h1>Safe Shelter for All</h1>
                <p>We care for pets like family</p>
            </div>
        </div>
        @*Final Slide*@
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1543852786-1cf6624b9987"
                 class="d-block w-100" alt="Volunteer walking dogs">
            <div class="carousel-caption">
                <h1>Adopt. Foster. Love.</h1>
                <p>Be the reason they smile</p>
            </div>
        </div>

    </div>


    @*Carousal controls in regards to previous/next functions*@
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@*Avancand Search + Promo Video*@
<div class="row mb-5"

<!--Left Colomn Search Filters-->
<div class="col-md-8"
<
<div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="mb-3">Advanced Search and Filter</h4>
                <form>
                    <div class="row g-2">
                        <!-- Pet Type filter -->
                        <div class="col-md-4">
                            <select class="form-select">
                                <option>All Pets</option>
                                <option>Dogs</option>
                                <option>Cats</option>
                                <option>Other</option>
                            </select>
                        </div>

                        <!-- Age filter -->
                        <div class="col-md-4">
                            <select class="form-select">
                                <option>Any Age</option>
                                <option>Puppy/Kitten</option>
                                <option>Adult</option>
                                <option>Senior</option>
                            </select>
                        </div>

                        <!-- Submit button -->
                        <div class="col-md-4">
                            <button class="btn btn-info w-100">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

     <!-- RIGHT COLUMN: Embedded Video -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="ratio ratio-16x9">
                <iframe src= "https://www.youtube.com/watch?v=wAXa-H7fem0"
                        title="Adoption Video"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>
</div>


@* Tetimonials Section *@
<h3 class="text-center mb-4">What Our Families Say</h3>
<div class="row mb-5">
    <!-- Testimonial 1 -->
    <div class="col-md-6">
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <p class="mb-1">"Adopting our dog was the best decision ever. Thank you!"</p>
                <small class="text-muted">– Sarah, Auckland</small>
            </div>
        </div>
    </div>

    <!-- Testimonial 2 -->
    <div class="col-md-6">
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <p class="mb-1">"Fostering cats through this centre has been so rewarding."</p>
                <small class="text-muted">– James, Wellington</small>
            </div>
        </div>
    </div>
</div>



