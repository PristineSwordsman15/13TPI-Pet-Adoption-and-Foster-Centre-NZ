@* Landscape Hero Carousel *@
<style>
    #heroCarousel {
        box-shadow: 0 4px 24px rgba(0,0,0,0.18);
        border-radius: 0;
        overflow: hidden;
        margin: 0;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
        width: 100%;
        max-height: 500px; /* Control banner height */
    }

    .carousel-inner {
        border-radius: 0;
    }

    .hero-img {
        width: 100%;
        height: 500px; /* Match the container */
        object-fit: cover;
        filter: brightness(0.9) saturate(1.1);
        transition: filter 0.3s ease-in-out;
    }

    .carousel-item.active .hero-img {
        filter: brightness(1) saturate(1.2);
    }

    .carousel-caption {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(30, 41, 59, 0.45);
        border-radius: 12px;
        padding: 20px 30px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.1);
        color: #fff;
        text-shadow: 0 2px 8px rgba(0,0,0,0.18);
        max-width: 70%;
        margin: auto;
    }

        .carousel-caption h1 {
            font-size: 2.25rem;
            font-weight: 700;
        }

        .carousel-caption p {
            font-size: 1.2rem;
            font-weight: 500;
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #64748b;
        border-radius: 50%;
        padding: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.18);
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
    }

    
    @@media (max-width: 768px) {
        #heroCarousel {
            max-height: 300px;
        }

        .hero-img {
            height: 300px;
        }

        .carousel-caption {
            padding: 12px 16px;
            font-size: 0.9rem;
            max-width: 90%;
        }

            .carousel-caption h1 {
                font-size: 1.25rem;
            }

            .carousel-caption p {
                font-size: 0.9rem;
            }
    }
</style>

<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">

        <!-- Slide 1 -->
        <div class="carousel-item active">
            <img src="https://plus.unsplash.com/premium_photo-1667563114911-13425737c6f5?q=80&w=3087&auto=format&fit=crop"
                 class="d-block w-100 hero-img"
                 alt="Happy dog being adopted">
            <div class="carousel-caption">
                <h1>Welcome to Pet Adoption NZ</h1>
                <p>Where every pet finds a home</p>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1592194996308-7b43878e84a6?ixlib=rb-4.0.3&q=80&w=1600&fit=crop"
                 class="d-block w-100 hero-img"
                 alt="Cat resting at shelter">
            <div class="carousel-caption">
                <h1>Safe Shelter for All</h1>
                <p>We care for pets like family</p>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1719093716464-e96aa6dca6f2?q=80&w=872&auto=format&fit=crop"
                 class="d-block w-100 hero-img"
                 alt="Volunteer walking dogs">
            <div class="carousel-caption">
                <h1>Adopt. Foster. Love.</h1>
                <p>Be the reason they smile</p>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

