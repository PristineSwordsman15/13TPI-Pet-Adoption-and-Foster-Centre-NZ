@* Improved carousel styling and layout *@
<style>
    #heroCarousel {
        box-shadow: 0 4px 24px rgba(0,0,0,0.18);
        border-radius: 18px;
        overflow: hidden;
        margin-top: 32px;
        margin-bottom: 32px;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
    }
    .carousel-inner {
        border-radius: 18px;
    }
    .hero-img {
        height: 70%;
        width: 65%;
        object-fit: cover;
        border-radius: 0;
        filter: brightness(0.92) saturate(1.1);
        transition: filter 0.3s;
    }
    .carousel-item.active .hero-img {
        filter: brightness(1) saturate(1.2);
    }
    .carousel-caption {
        background: rgba(30, 41, 59, 0.45);
        border-radius: 12px;
        padding: 18px 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.10);
        color: #fff;
        text-shadow: 0 2px 8px rgba(0,0,0,0.18);
        max-width: 80%;
        margin: 0 auto;
    }
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #64748b;
        border-radius: 50%;
        padding: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.18);
    }
    .carousel-control-prev,
    .carousel-control-next {
        width: 7%;
    }
    @@media (max-width: 768px) {
        #heroCarousel {

        }
        .hero-img {
            height: 180px;
        }
        .carousel-caption {
            padding: 10px 12px;
            font-size: 0.95rem;
        }
    }
</style>

                <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" style="max-width: 600px; margin: 0 auto;">
                    <div class="carousel-inner">

                        <!-- Initial Slide -->
                        <div class="carousel-item active">
                            <img src="https://plus.unsplash.com/premium_photo-1667563114911-13425737c6f5?q=80&w=3087&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                 class="d-block w-100 hero-img"
                                 alt="Happy dog being adopted">
                            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                                <h1 class="fw-bold display-6 text-shadow mb-2">Welcome to Pet Adoption NZ</h1>
                                <p class="lead fw-semibold text-shadow mb-0" style="font-size: 1.1rem;">Where every pet finds a home</p>
                            </div>
                        </div>

                        <!-- Second Slide -->
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1592194996308-7b43878e84a6?ixlib=rb-4.0.3&q=80&w=1600&fit=crop"
                                 class="d-block w-100 hero-img"
                                 alt="Cat resting at shelter">
                            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                                <h1 class="fw-bold display-6 text-shadow mb-2">Safe Shelter for All</h1>
                                <p class="lead fw-semibold text-shadow mb-0" style="font-size: 1.1rem;">We care for pets like family</p>
                            </div>
                        </div>

                        <!-- Third Slide -->
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1719093716464-e96aa6dca6f2?q=80&w=872&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                 class="d-block w-100 hero-img"
                                 alt="Volunteer walking dogs">
                            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                                <h1 class="fw-bold display-6 text-shadow mb-2">Adopt. Foster. Love.</h1>
                                <p class="lead fw-semibold text-shadow mb-0" style="font-size: 1.1rem;">Be the reason they smile</p>
                            </div>
                        </div>

                    </div>

                    <!-- Carousel Controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
