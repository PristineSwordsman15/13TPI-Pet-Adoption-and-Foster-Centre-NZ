@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";   // using Shared Layout (Layout.cshtml)
}

@* ==================== HERO CAROUSEL ==================== *@
<div id="myCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Initial Slide -->
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1619983081652-19f1c98c1f1e?ixlib=rb-4.0.3&q=80&w=1600&fit=crop"
                 class="d-block w-100 hero-img" alt="Happy dog being adopted">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <img src="~/images/logo.png" alt="Pet Adoption NZ Logo" class="mb-3 hero-logo">
                <h1 class="fw-bold display-3 text-shadow">Welcome to Pet Adoption NZ</h1>
                <p class="lead fw-semibold text-shadow">Where every pet finds a home</p>
            </div>
        </div>

        <!-- Second Slide -->
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1583337130417-3346a1f1a3ec?ixlib=rb-4.0.3&q=80&w=1600&fit=crop"
                 class="d-block w-100 hero-img" alt="Cat resting at shelter">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <img src="~/images/logo.png" alt="Pet Adoption NZ Logo" class="mb-3 hero-logo">
                <h1 class="fw-bold display-3 text-shadow">Safe Shelter for All</h1>
                <p class="lead fw-semibold text-shadow">We care for pets like family</p>
            </div>
        </div>

        <!-- Final Slide -->
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1622061448509-7272d263d9fe?ixlib=rb-4.0.3&q=80&w=1600&fit=crop"
                 class="d-block w-100 hero-img" alt="Volunteer walking dogs">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <img src="~/images/logo.png" alt="Pet Adoption NZ Logo" class="mb-3 hero-logo">
                <h1 class="fw-bold display-3 text-shadow">Adopt. Foster. Love.</h1>
                <p class="lead fw-semibold text-shadow">Be the reason they smile</p>
            </div>
        </div>
    </div>

    <!-- Carousel controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


@* ==================== CUSTOM STYLES ==================== *@
<style>
    /* Make images "header friendly" */
    .hero-img {
        height: 500px; /* fixed header height */
        object-fit: cover; /* keeps images from stretching */
    }

    /* Logo inside carousel */
    .hero-logo {
        height: 80px;
        width: auto;
    }

    /* Add text shadow for readability */
    .text-shadow {
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
    }

    /* Center carousel text vertically */
    .carousel-caption {
        top: 0;
        bottom: 0;
    }
</style>


@*Avancand Search + Promo Video*@
<div class="row mb-5"

<!--Left Colomn Search Filters-->
<div class="col-md-8"
<
<div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="mb-3">Advanced Search and Filter</h4>
                <form>
                    <div class="row g-2">
                        <!-- Pet Type filter -->
                        <div class="col-md-4">
                            <select class="form-select">
                                <option>All Pets</option>
                                <option>Dogs</option>
                                <option>Cats</option>
                                <option>Other</option>
                            </select>
                        </div>

                        <!-- Age filter -->
                        <div class="col-md-4">
                            <select class="form-select">
                                <option>Any Age</option>
                                <option>Puppy/Kitten</option>
                                <option>Adult</option>
                                <option>Senior</option>
                            </select>
                        </div>

                        <!-- Submit button -->
                        <div class="col-md-4">
                            <button class="btn btn-info w-100">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

     <!-- RIGHT COLUMN: Embedded Video -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="ratio ratio-16x9">
                <iframe src= "https://www.youtube.com/watch?v=wAXa-H7fem0"
                        title="Adoption Video"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>
</div>


