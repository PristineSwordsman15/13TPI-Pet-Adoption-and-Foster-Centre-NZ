@model IEnumerable<Shelter>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Franchise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelterType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Franchise.FranchiseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShelterID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShelterID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShelterID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
