@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Shelter>

@{
    ViewData["Title"] = "Index";
}

<h1>Organisation Shelters</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
<div class="form-actions no-color">
    <p>
        <label>Find by Name of ShelterName or City: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" /></label>
        <input type="submit" value="Search" class="btn btn-default" />
        <a asp-action="Index">Back to Full List</a>
    </p>
</div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShelterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FranchiseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableBeds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OccupiedBeds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperatingHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelterType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FranchiseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableBeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OccupiedBeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OperatingHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.ShelterID" class="btn btn-sm btn-warning" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ShelterID" class="btn btn-sm btn-info" title="Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ShelterID" class="btn btn-sm btn-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
