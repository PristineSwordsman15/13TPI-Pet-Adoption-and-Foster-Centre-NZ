@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Coordinator>

@{
    ViewData["Title"] = "Coordinator - Index";
}

<h1 class="mb-3">Coordinators</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Franchise)</th>
            <th>@Html.DisplayNameFor(model => model.PetGroup)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Franchise.FranchiseID)</td>
                <td>@Html.DisplayFor(modelItem => item.PetGroup.PetGroupID)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CoordinatorID" class="btn btn-sm btn-outline-primary me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.CoordinatorID" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CoordinatorID" class="btn btn-sm btn-outline-danger me-1">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
