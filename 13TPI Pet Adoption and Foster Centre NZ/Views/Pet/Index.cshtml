@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Pet>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Available Pets in Our Network</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

< form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <label>Find by Name of PetName or PetAge: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" /></label>
            <input type="submit" value="Search" class="btn btn-default" />
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
