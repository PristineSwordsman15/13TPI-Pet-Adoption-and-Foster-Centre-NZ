@using _13TPI_Pet_Adoption_and_Foster_Centre_NZ.Areas.Identity.Data.Helpers
@model PaginatedList<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Pet>

@{
    ViewData["Title"] = "Pets";
}

<h2>Pets</h2>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Search by name or breed" />

    <select asp-items="ViewBag.PetStatusID" name="petStatusId" class="form-control mr-2">
        <option value="">-- Status --</option>
    </select>

    <select asp-items="ViewBag.VaccinationStatusID" name="vaccinationStatusId" class="form-control mr-2">
        <option value="">-- Vaccination --</option>
    </select>

    <select asp-items="ViewBag.ShelterID" name="shelterId" class="form-control mr-2">
        <option value="">-- Shelter --</option>
    </select>

    <input type="submit" value="Filter" class="btn btn-primary" />
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Add New Pet</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AgeSortParm"]">Age</a>
            </th>
            <th>Status</th>
            <th>Vaccination</th>
            <th>Shelter</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.PetStatus?.StatusName</td>
                <td>@item.VaccinationStatus?.StatusName</td>
                <td>@item.Shelter?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PetID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.PetID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.PetID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Optional: Pagination controls -->
@if (Model.TotalPages > 1)
{
    
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
            </li>
        </ul>
    </nav>
}