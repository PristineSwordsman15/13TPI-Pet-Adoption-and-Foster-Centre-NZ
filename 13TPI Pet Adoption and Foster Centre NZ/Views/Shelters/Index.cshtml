@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Shelter>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShelterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShelterID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShelterID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShelterID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
