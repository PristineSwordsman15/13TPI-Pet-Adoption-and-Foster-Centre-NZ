@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.MedicalRecord>

@{
    ViewData["Title"] = "Pet Medical Records";
}

<h1>Medical Records of User's Pets</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success" title="Create New">
        <i class="bi bi-plus-circle"></i>
    </a>
</div>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <label>Find by Name of Shelter Location PostCode or Region: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" /></label>
            <input type="submit" value="Search" class="btn btn-default" />
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PetID)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["VetNameSortParm"]">@Html.DisplayNameFor(model => model.VetName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ClinicNameSortParm"]">@Html.DisplayNameFor(model => model.ClinicName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treatment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VaccinationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MicrochipID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialNeeds)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PetID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treatment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaccinationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MicrochipID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialNeeds)
            </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.MedicalRecordID" class="btn btn-sm btn-warning" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.MedicalRecordID" class="btn btn-sm btn-info" title="Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MedicalRecordID" class="btn btn-sm btn-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
