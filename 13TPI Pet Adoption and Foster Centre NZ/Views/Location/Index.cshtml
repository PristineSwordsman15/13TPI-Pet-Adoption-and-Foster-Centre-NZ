@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Location>

@{
    ViewData["Title"] = "Location - Index";
}

<h1 class="mb-3">Locations</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.Surburb)</th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>@Html.DisplayNameFor(model => model.Region)</th>
            <th>@Html.DisplayNameFor(model => model.PostCode)</th>
            <th>@Html.DisplayNameFor(model => model.Country)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Surburb)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.Region)</td>
                <td>@Html.DisplayFor(modelItem => item.PostCode)</td>
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LocationID" class="btn btn-sm btn-outline-primary me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.LocationID" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.LocationID" class="btn btn-sm btn-outline-danger me-1">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
