@model IEnumerable<_13TPI_Pet_Adoption_and_Foster_Centre_NZ.Models.Payment>

@{
    ViewData["Title"] = "Payments - Index";
}

<h1 class="mb-3">Payments</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentType)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentStatus)</th>
            <th>@Html.DisplayNameFor(model => model.UserID)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentType.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentMethod.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentStatus.StatusName)</td>
                <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaymentID" class="btn btn-sm btn-outline-primary me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.PaymentID" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.PaymentID" class="btn btn-sm btn-outline-danger me-1">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>