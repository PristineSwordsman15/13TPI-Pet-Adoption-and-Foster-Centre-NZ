@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="admin-panel">
    <h2>User Management</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-primary">@TempData["SuccessMessage"]</div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditRole" asp-route-userId="@user.Id" class="btn btn-primary btn-sm">Edit Role</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
